<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_page_color">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Wybierz kontrolowaną strefę:" />
        </com.google.android.material.textfield.TextInputLayout>



        <Button
            android:id="@+id/GoTo_fragment_raport_zone1short"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kontrola Strefy I" />

        <Button
            android:id="@+id/GoTo_fragment_raport_zone1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kontrola Strefy I - okresowe" />

        <Button
            android:id="@+id/GoTo_fragment_raport_zone2short"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kontrola Strefy II" />

        <Button
            android:id="@+id/GoTo_fragment_raport_zone2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kontrola Strefy II - okresowe" />

        <Button
            android:id="@+id/GoTo_fragment_raport_zone3short"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kontrola Strefy III" />
        <Button
            android:id="@+id/GoTo_fragment_raport_zone3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kontrola Strefy III - okresowe" />

        <Button
            android:id="@+id/GoTo_fragment_raport_zone4short"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kontrola Strefy IV" />
        <Button
            android:id="@+id/GoTo_fragment_raport_zone4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kontrola Strefy IV - okresowe" />

        <Button
            android:id="@+id/GoTo_fragment_raport_zone5short"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kontrola Strefy V - Zima" />
        <Button
            android:id="@+id/GoTo_fragment_raport_zone5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kontrola Strefy V - Zima - okresowe" />

        <Button
            android:id="@+id/GoTo_fragment_raport_zone6short"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kontrola Strefy V - Lato" />
        <Button
            android:id="@+id/GoTo_fragment_raport_zone6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kontrola Strefy V - Lato - okresowe" />

    </LinearLayout>
</ScrollView>