<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CardViewRaport"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="#2196F3"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/roomName"
            android:layout_width="233dp"
            android:layout_height="39dp"
            android:layout_marginStart="16dp"
            android:text="@string/row_name"
            android:textColor="@color/light_black"
            android:textSize="@dimen/tv_profile_page_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.192" />

        <TextView
            android:id="@+id/raportDate"
            android:layout_width="135dp"
            android:layout_height="20dp"
            android:layout_marginEnd="16dp"
            android:text="@string/row_date"
            android:textColor="@color/light_black"
            android:textSize="15sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/raportZone"
            android:layout_width="234dp"
            android:layout_height="33dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="44dp"
            android:text="@string/row_zone"
            android:textColor="@color/light_black"
            android:textSize="15sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/raportControl"
            android:layout_width="135dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            android:text="@string/row_control"
            android:textColor="@color/light_black"
            android:textSize="15sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>